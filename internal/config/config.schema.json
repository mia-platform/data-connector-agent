{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"integrations": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"enum": ["jira"]
					},
					"authentication": {
						"type": "object",
						"properties": {
							"secret": {
								"$ref": "#/definitions/secret"
							}
						}
					},
					"writers": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"type": {
									"type": "string",
									"enum": ["mongo"]
								},
								"url": {
									"$ref": "#/definitions/secret"
								},
								"outputEvent": {
									"type": "object"
								}
							},
							"required": [
								"type",
								"url",
								"outputEvent"
							]
						}
					}
				},
				"required": [
					"type",
					"writers"
				]
			}
		}
	},
	"required": [
		"integrations"
	],
	"definitions": {
		"secret": {
			"type": "object",
			"properties": {
				"fromEnv": {
					"type": "string"
				},
				"fromFile": {
					"type": "string"
				}
			}
		}
	}
}
