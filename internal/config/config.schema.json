{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"integrations": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"enum": [
							"jira"
						]
					},
					"authentication": {
						"type": "object",
						"properties": {
							"secret": {
								"$ref": "#/definitions/secret"
							}
						}
					},
					"writers": {
						"type": "array",
						"items": {
							"oneOf": [
								{
									"type": "object",
									"properties": {
										"type": {
											"type": "string",
											"const": "mongo"
										},
										"url": {
											"$ref": "#/definitions/secret"
										},
										"collection": {
											"type": "string"
										},
										"outputEvent": {
											"type": "object"
										}
									},
									"required": [
										"type",
										"url",
										"outputEvent",
										"collection",
										"uniqueIdKey"
									]
								}
							]
						}
					}
				},
				"required": [
					"type",
					"writers"
				]
			},
			"minItems": 1
		}
	},
	"required": [
		"integrations"
	],
	"definitions": {
		"secret": {
			"type": "object",
			"properties": {
				"fromEnv": {
					"type": "string"
				},
				"fromFile": {
					"type": "string"
				}
			}
		}
	}
}
